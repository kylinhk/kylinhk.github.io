<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><% if (page.title){ %><%- page.title %> | <% } %><%- config.title %></title>
    <meta name="description" content="<%- config.description %>">
    <meta name="keywords" content="<%- config.keywords %>">
    <meta name="author" content="<%- config.author %>">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%- config.url %>">
    <meta property="og:title" content="<%- config.title %>">
    <meta property="og:description" content="<%- config.description %>">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="<%- config.url %>">
    <meta property="twitter:title" content="<%- config.title %>">
    <meta property="twitter:description" content="<%- config.description %>">
    
    <!-- CSS -->
    <%- css('css/style.css') %>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a href="<%- url_for('/') %>">
                        <h1><%- config.title %></h1>
                        <p><%- config.subtitle %></p>
                    </a>
                </div>
                
                <div class="navbar-menu">
                    <% if (theme.menu) { %>
                        <% for (let label in theme.menu) { %>
                            <a href="<%- url_for(theme.menu[label]) %>" class="navbar-item">
                                <%- label %>
                            </a>
                        <% } %>
                    <% } %>
                    
                    <% if (theme.social && theme.social.telegram) { %>
                        <a href="<%- theme.social.telegram %>" class="navbar-item contact-btn" target="_blank">
                            <i class="fab fa-telegram"></i> 联系我们
                        </a>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="main">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3><%- theme.company.name %></h3>
                    <p><%- theme.company.english_name %></p>
                    <p>商业登记号：<%- theme.company.registration %></p>
                    <p>成立时间：<%- theme.company.founded %></p>
                </div>
                
                <div class="footer-section">
                    <h4>我们的服务</h4>
                    <% if (theme.services) { %>
                        <% theme.services.forEach(function(service) { %>
                            <p><i class="fas <%- service.icon %>"></i> <%- service.title %></p>
                        <% }); %>
                    <% } %>
                </div>
                
                <div class="footer-section">
                    <h4>联系方式</h4>
                    <% if (theme.social && theme.social.telegram) { %>
                        <p>
                            <i class="fab fa-telegram"></i> 
                            <a href="<%- theme.social.telegram %>" target="_blank">Telegram</a>
                        </p>
                    <% } %>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; <%- theme.footer.copyright %></p>
            </div>
        </div>
    </footer>
</body>
</html>