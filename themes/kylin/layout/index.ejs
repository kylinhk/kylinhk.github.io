<%- partial('_partial/header') %>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title"><%- config.title %></h1>
            <p class="hero-subtitle"><%- config.subtitle %></p>
            <p class="hero-description"><%- config.description %></p>
            
            <div class="hero-actions">
                <% if (theme.social && theme.social.telegram) { %>
                    <a href="<%- theme.social.telegram %>" class="btn btn-primary" target="_blank">
                        <i class="fab fa-telegram"></i> 立即联系
                    </a>
                <% } %>
                <a href="<%- url_for('/services') %>" class="btn btn-secondary">
                    了解服务
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services">
    <div class="container">
        <h2 class="section-title">我们的服务</h2>
        <div class="services-grid">
            <% if (theme.services) { %>
                <% theme.services.forEach(function(service) { %>
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas <%- service.icon %>"></i>
                        </div>
                        <h3 class="service-title"><%- service.title %></h3>
                        <p class="service-description"><%- service.description %></p>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</section>

<!-- Advantages Section -->
<section class="advantages">
    <div class="container">
        <h2 class="section-title">我们的优势</h2>
        <div class="advantages-grid">
            <% if (theme.advantages) { %>
                <% theme.advantages.forEach(function(advantage) { %>
                    <div class="advantage-item">
                        <i class="fas fa-check-circle"></i>
                        <span><%- advantage %></span>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact">
    <div class="container">
        <h2 class="section-title">联系我们</h2>
        <div class="contact-content">
            <p>准备进入中国市场？让我们帮助您在抖音平台上获得成功！</p>
            <% if (theme.social && theme.social.telegram) { %>
                <a href="<%- theme.social.telegram %>" class="btn btn-primary btn-large" target="_blank">
                    <i class="fab fa-telegram"></i> 通过 Telegram 联系我们
                </a>
            <% } %>
        </div>
    </div>
</section>

<%- partial('_partial/footer') %>